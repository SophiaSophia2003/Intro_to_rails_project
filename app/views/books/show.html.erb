<style type="text/css">
  #example-image{
    width: 100px;
  }
</style>

<table class="table table-striped table-bordered" style="width: 100%;">
  <thead style="width: 100%;">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Author</th>
      <th scope="col">category</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @book.title %></td>
        <td><%= @book.description %></td>
        <td><%= image_tag @book.image_small_thumbnail, class: "img-responsive", id: "example-image" %></td>
        <td><%= @authors.map{ |c| link_to(c.author_name,author_path(c.a_id))}.join(", ").html_safe %></td>

        <td><%= @book.categories.map{ |c| link_to(c.name,category_path(c.id))}.join(", ").html_safe %></td>
        <td><%= link_to @book.title, edit_book_path(@book) , class: "btn btn-primary"%></td>
        <td><%= button_to 'Delete', @book, method: :delete, form:{ data: { turbo_confirm: 'Are you sure?' }} ,class: "btn btn-danger" %></td>

       
      </tr>
  </tbody>
</table>
