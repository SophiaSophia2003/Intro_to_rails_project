<style type="text/css">
  #example-image{
    width: 100px;
  }
</style>
<h1 style="padding-bottom: 10px;">Books</h1>

<table class="table table-striped table-bordered" id="data-container" style="width: 100%;">
  <thead style="width: 100%;">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= image_tag book.image_small_thumbnail, class: "img-responsive", id: "example-image" %></td>
        <td><%= link_to book.title, book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @books, :style => 'color:blue' %>

