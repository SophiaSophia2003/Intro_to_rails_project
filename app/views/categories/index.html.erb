<style type="text/css">
  #example-image{
    width: 100px;
  }
</style>
<h1 style="padding-bottom: 10px;">Categories</h1>


<table class="table table-striped table-bordered" style="width: 100%;">
  <thead style="width: 100%;">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= link_to category.name, category_path(category) %></td>
         <td><%= button_to 'Delete', category, method: :delete, form:{ data: { turbo_confirm: 'Are you sure?' }} ,class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @categories, :style => 'color:blue' %>
